{
  "name": "style-transform",
  "version": "0.2.2",
  "description": "Wrap style objects with a fluent API for easy manipulation",
  "homepage": "https://github.com/jsiwhitehead/style-transform",
  "license": "MIT",
  "author": "Jon Whitehead",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "scripts": {
    "prettier": "prettier --write \"{src,test}/**/*.ts\"",
    "clean": "rimraf lib/*",
    "build": "yarn run clean && tsc",
    "test": "jest",
    "prepare": "yarn run test && yarn run build"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^23.3.0",
    "jest": "^23.4.1",
    "prettier": "^1.13.7",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.0.1",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "css-shorthand-expand": "1.1.0",
    "csstype": "^2.5.6",
    "object-path-immutable": "^3.0.0"
  }
}
